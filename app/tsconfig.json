{
  "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "esModuleInterop": true,
      "incremental": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./lib",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2016"
  },
  "include": [
      "./src/**/*"
  ]
}
